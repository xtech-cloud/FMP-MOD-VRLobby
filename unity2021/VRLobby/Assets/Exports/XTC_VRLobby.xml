<?xml version="1.0" encoding="utf-8"?>
<MyConfig version="1.0">
  <!-- UI 
      visible: 预加载完成后是否显示
      slot: ui根节点在主Canvas中的挂载路径
    -->
  <UI visible="true" slot="[root]"/>
  <!-- 远程过程调用
      address: 地址
    -->
  <GRPC address="https://localhost:19000"/>
  <!-- 样式列表
      name: 名称
    -->
  <Styles>
    <Style name="default" active="BannerMenu">
      <!--条幅菜单
        distance: 与摄像机的距离
        space: 两张图片中心点的间隔
      -->
      <BannerMenu distance="2" space="300">
        <Title image="title.png">
          <Anchor marginV="475" width="464" height="122"/>
        </Title>
        <!--入口列表
              Entry.image: 条幅图片
              Entry.Subject: 入口触发后发布的消息
            -->
        <BannerEntries>
          <BannerEntry>
            <Banner image="1.png">
              <Anchor marginH="-600" width="280" height="680"/>
            </Banner>
            <Subjects>
              <Subject message="/XTC/VRLobby/Close">
                <Parameters>
                  <Parameter key="uid" value="default" type="string"/>
                  <Parameter key="delay" value="0" type="float"/>
                </Parameters>
              </Subject>
            </Subjects>
          </BannerEntry>
          <BannerEntry>
            <Banner image="2.png">
              <Anchor marginH="-300" width="280" height="680"/>
            </Banner>
            <Subjects>
              <Subject message="/XTC/VRLobby/Close">
                <Parameters>
                  <Parameter key="uid" value="default" type="string"/>
                  <Parameter key="delay" value="0" type="float"/>
                </Parameters>
              </Subject>
            </Subjects>
          </BannerEntry>
          <BannerEntry>
            <Banner image="3.png">
              <Anchor marginH="0" width="280" height="680"/>
            </Banner>
            <Subjects>
              <Subject message="/XTC/VRLobby/Close">
                <Parameters>
                  <Parameter key="uid" value="default" type="string"/>
                  <Parameter key="delay" value="0" type="float"/>
                </Parameters>
              </Subject>
            </Subjects>
          </BannerEntry>
          <BannerEntry>
            <Banner image="4.png">
              <Anchor marginH="300" width="280" height="680"/>
            </Banner>
            <Subjects>
              <Subject message="/XTC/VRLobby/Close">
                <Parameters>
                  <Parameter key="uid" value="default" type="string"/>
                  <Parameter key="delay" value="0" type="float"/>
                </Parameters>
              </Subject>
            </Subjects>
          </BannerEntry>
          <BannerEntry>
            <Banner image="5.png">
              <Anchor marginH="600" width="280" height="680"/>
            </Banner>
            <Subjects>
              <Subject message="/XTC/VRLobby/Close">
                <Parameters>
                  <Parameter key="uid" value="default" type="string"/>
                  <Parameter key="delay" value="0" type="float"/>
                </Parameters>
              </Subject>
            </Subjects>
          </BannerEntry>
        </BannerEntries>
      </BannerMenu>
    </Style>
  </Styles>
  <!-- 预创建的实例列表
      uid: 实例的唯一ID
      style: 使用的样式名
    -->
  <Instances>
    <Instance uid="default" style="default"/>
  </Instances>
  <!-- 预加载 -->
  <Preload>
    <!-- 消息订阅的主题
          message: 消息
          Parameter.key: 参数的键
          Parameter.value: 参数的值
          Parameter.type: 参数的类型，支持的类型为string,int,float,bool
        -->
    <Subjects>
      <Subject message="/XTC/VRLobby/Open">
        <Parameters>
          <Parameter key="uid" value="default" type="string"/>
          <Parameter key="source" value="" type="string"/>
          <Parameter key="uri" value="" type="string"/>
          <Parameter key="delay" value="0" type="float"/>
        </Parameters>
      </Subject>
    </Subjects>
  </Preload>
</MyConfig>
